<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:paddingLeft="@dimen/dp_15"
    android:paddingRight="@dimen/dp_15">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_5">
        <TextView
            android:id="@+id/tv_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_28"
            android:text="2017年"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:visibility="gone">
            <View
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_2"
                android:background="@color/red"/>
            <TextView
                android:id="@+id/tv_lunar_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="戊戌"/>
        </LinearLayout>
    </RelativeLayout>

    <View
        android:id="@+id/view_line_top"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_88d0d0d0"/>

    <GridView
        android:id="@+id/gl_year"
        android:layout_width="match_parent"
        android:layout_height="430dp"
        android:numColumns="3"
        android:scrollbars="none"
        android:layout_gravity="center"
        android:visibility="gone">

    </GridView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1">

            <com.timemanagement.zxg.widget.YearMonthView
                android:id="@+id/year_month_item0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
            <com.timemanagement.zxg.widget.YearMonthView
                android:id="@+id/year_month_item1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
            <com.timemanagement.zxg.widget.YearMonthView
                android:id="@+id/year_month_item2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1">

            <com.timemanagement.zxg.widget.YearMonthView
                android:id="@+id/year_month_item3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
            <com.timemanagement.zxg.widget.YearMonthView
                android:id="@+id/year_month_item4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
            <com.timemanagement.zxg.widget.YearMonthView
                android:id="@+id/year_month_item5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1">

            <com.timemanagement.zxg.widget.YearMonthView
                android:id="@+id/year_month_item6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
            <com.timemanagement.zxg.widget.YearMonthView
                android:id="@+id/year_month_item7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
            <com.timemanagement.zxg.widget.YearMonthView
                android:id="@+id/year_month_item8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1">

            <com.timemanagement.zxg.widget.YearMonthView
                android:id="@+id/year_month_item9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
            <com.timemanagement.zxg.widget.YearMonthView
                android:id="@+id/year_month_item10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
            <com.timemanagement.zxg.widget.YearMonthView
                android:id="@+id/year_month_item11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
