<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.timemanagement.zxg.timemanagement">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name="com.timemanagement.zxg.activities.activitycontrol.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.timemanagement.zxg.activities.EventDayActivity"
            android:launchMode="singleInstance"
            android:windowSoftInputMode="adjustPan|stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.timemanagement.zxg.activities.EventEditActivity" />
        <activity android:name="com.timemanagement.zxg.activities.TestActivity" />
        <activity android:name="com.timemanagement.zxg.activities.MainActivity" />
        <activity
            android:name="com.timemanagement.zxg.activities.EventMonthActivity"
            android:launchMode="singleInstance" />
        <activity
            android:name="com.timemanagement.zxg.activities.EventYearActivity" />
        <activity
            android:name="com.timemanagement.zxg.activities.EventRepeatActivity" />
        <activity
            android:name="com.timemanagement.zxg.activities.EventListActivity"/>
    </application>

</manifest>